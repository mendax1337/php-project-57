includes:
  - vendor/phpstan/phpstan-phpunit/extension.neon
  - vendor/larastan/larastan/extension.neon

parameters:
  level: 7

  paths:
    - app
    - routes
    - database

  reportUnmatchedIgnoredErrors: false

  ignoreErrors:
    # Eloquent relations generics / $this vs static — шум от Larastan
    - '#Template type TDeclaringModel on class Illuminate\\Database\\Eloquent\\Relations\\(BelongsTo|HasMany|BelongsToMany) is not covariant#'
    - '#Return type .*BelongsTo<.*,\s*\$this\(.*\)>#'
    - '#Return type .*HasMany<.*,\s*\$this\(.*\)>#'
    - '#Return type .*BelongsToMany<.*,\s*\$this\(.*\)>#'
